<div class="book">
    <div class="imageBook-detail"><img src="<%= item.imgUrl %>" alt="<% item.title %>" width="350px" /></div>
    <div class="detail-container">
        <div class="type-detail"> <%= item.type %></div>
        <div class="book-author"> <%= item.author %> </div>
        <div class="description"><%= item.description %> </div>
        <div class="btn-book"><a href="<%- link %>">Back to library</a></div>
    </div>
</div>